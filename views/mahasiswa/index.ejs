<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Halaman Mahasiswa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous" />
  </head>
  <body>
    <h1 class="text-center mb-3">Selamat Datang di halaman Mahasiswa</h1>
    <div class="container">
      <% if (messages.success) { %>
      <div class="alert alert-info" role="alert"><%- messages.success %></div>
      <% } %>
      <div class="row">
        <div class="col">
          <a href="/mahasiswa/create" class="btn btn-sm btn-success">Tambah</a>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">NRP</th>
                <th scope="col">Nama Depan</th>
                <th scope="col">Nama Belakang</th>
                <th scope="col">Jenis Kelamin</th>
                <th scope="col">Agama</th>
                <th scope="col">Umur</th>
                <th scope="col">Tinggi Badan</th>
                <th scope="col">Golongan Darah</th>
                <th scope="col">Alamat</th>
                <th scope="col">Hobi</th>
                <th scope="col">Email</th>
                <th scope="col">No. Telepon</th>
                <th colspan="2" scope="col">Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <th scope="row"><%= i + 1 %></th>
                <td><%= data[i].nrp %></td>
                <td><%= data[i].nama_depan %></td>
                <td><%= data[i].nama_belakang %></td>
                <td><%= data[i].jenis_kelamin %></td>
                <td><%= data[i].agama %></td>
                <td><%= data[i].umur %></td>
                <td><%= data[i].tinggi_badan %></td>
                <td><%= data[i].gol_darah %></td>
                <td><%= data[i].alamat %></td>
                <td><%= data[i].hobi %></td>
                <td><%= data[i].email %></td>
                <td><%= data[i].no_telepon %></td>
                <td>
                  <a href="/mahasiswa/edit/<%= data[i].id_mahasiswa %>" class="btn btn-sm btn-warning">Edit</a>
                  <a href="/mahasiswa/delete/<%= data[i].id_mahasiswa %>" class="btn btn-sm btn-danger">Delete</a>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
  </body>
</html>
